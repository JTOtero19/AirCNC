<div class="navbar fixed-top navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">
    <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag ("AirCnCLogo3") %>
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
          <li class="nav-item-font active mt-1">
            <%= link_to "Home", root_path, class: "nav-link" %>
          </li>
          <li class="btn btn-outline-success btn-sm nav-item mx-1">
            <%= link_to "New Post", new_chair_path, class: "nav-link"%>
          </li>
          <b><li class="nav-item active mt-1 mx-1" id="rch">
            <%= link_to "Rent a chair", root_path, class: "nav-link" %>
          </li></b>
          <li class="nav-item-dropdown dropdown">
          <a href="#" class="avatar" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <% if current_user.photo.attached? %>
              <%= image_tag current_user.photo, class: "avatar", alt: "dropdown menu" %>
            <% else %>
              <%= image_tag "avatar_chair.jpg", class: "avatar", alt: "dropdown menu" %>
              <% end %>
          </a>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "My Publications", chairs_path, class: "dropdown-item" %>
              <%= link_to "My Bookings", bookings_path, class: "dropdown-item" %>
              <%= link_to "Edit Profile", edit_user_registration_path, class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item-font mt-1">
            <%= link_to "Post a chair", user_session_path, class: "nav-link" %>
          </li>
          <li class="btn btn-outline-success btn-sm nav-item mx-1">
            <%= link_to "Sign Up", new_user_registration_path, class: "nav-link"%>
          </li>
          <b><li class="nav-item active mt-1 mx-1" id="rch">
            <%= link_to "Login", user_session_path, class: "nav-link" %>
            </li>
          </b>
        <% end %>
      </ul>
    </div>
  </div>
</div>
