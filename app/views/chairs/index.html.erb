<div class="banner">
  <div class="container">
    <h1>Find your perfect chair!</h1>
  </div>
</div>

<div class="container mt-4">
  <div class="row">
    <div class="col-12">
      <h4>Choose a chair</h4>
      <%= link_to "Post your chair", new_chair_path, class:"btn btn-success btn-sm float-right" %>
    </div>
  </div>
  <% @chairs.each do |chair| %>
    <div class="row mt-4">
      <div class="col-12">
        <div class="card">
          <div class="card-body">
            <div class="row">
              <div class="col-md-4">
                <div style="background-image: url('<%= chair.url_image.present? ? cl_image_path(chair.url_image, :transformation => {:width => 300, :crop => "scale"}) : cl_image_path("aarnio_originals_ballchair_orange_03_1200x_tddq6l.jpg", :transformation => {:width => 300, :crop => "scale"}) %>'); background-size: contain; background-position: center; background-repeat: no-repeat; height: 200px;"></div>
              </div>
              <div class="col-md-8">
                <h5><%= chair.name %></h5>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<button onclick="window.history.back();" style="position: fixed; bottom: 20px; left: 20px; background-color: #4CAF50; border: none; color: white; padding: 15px 32px; text-align: center; text-decoration: none; display: inline-block; font-size: 16px; margin: 4px 2px; cursor: pointer; border-radius: 50px;">Go Back</button>
