<div class="banner">
  <div class="container">
    <h1>Find your perfect chair!</h1>
  </div>
</div>

<div class="container mt-4">
  <div class="row">
    <div class="col-6">
      <h4>Choose a chair</h4>
    </div>
    <div class="col-6 text-end">
      <%= link_to "Post your chair", new_chair_path, class:"btn btn-success btn-sm" %>
    </div>
  </div>
  <div class="row">
    <% @chairs.each do |chair| %>
<div class="col-4 mb-3">
  <div class="card-category" style="background-image: url('<%= chair.url_image.present? ? cl_image_path(chair.url_image, :transformation => {:width => 300, :crop => "scale"}) : cl_image_path("aarnio_originals_ballchair_orange_03_1200x_tddq6l.jpg", :transformation => {:width => 300, :crop => "scale"}) %>'); background-size: contain; background-position: center; background-repeat: no-repeat; height: 200px;">
    <span style="position: absolute; top: 10px; right: 10px; background-color: rgba(255, 255, 255, 0.5); padding: 5px;"><%= chair.name %></span>
  </div>
</div>
    <% end %>
  </div>
</div>
