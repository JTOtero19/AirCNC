<div class="banner">
  <div class="container">
    <h1>Find your perfect chair!</h1>
  </div>
</div>

<div class="container mt-4">
  <div class="row">
    <div class="col-6">
      <h4>Choose a chair</h4>
    </div>
    <div class="col-6 text-end">
      <%= link_to "Post your chair", new_chair_path, class:"btn btn-success btn-sm" %>
    </div>
  </div>
  <div class="row">
    <% @chairs.each do |chair| %>
      <div class="col-4 mb-3">

        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= image_path "@SillaGamer01" %>)">
          <%= chair.name %>
        </div>
      </div>
    <% end %>
  </div>
</div>
