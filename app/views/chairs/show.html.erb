<div class="bg-color py-5">
  <div class="bannertwo">
    <div class="container w-50 shadow bg-white p-5 mb-5 rounded-5">
      <button onclick="window.history.back();" style="position: fixed; bottom: 20px; left: 20px; background-color: #6c757d; border: none; color: white; padding: 15px 32px; text-align: center; text-decoration: none; display: inline-block; font-size: 16px; margin: 4px 2px; cursor: pointer; border-radius: 50px;">Go Back</button>
      <div class="mt-3 mb-3">
        <h1><%= @chair.name %></h1>
    <div>
      <div class="d-flex justify-content-center">
        <div class="photo-show mx-0 w-100">
          <% @chair.photos.each do |photo|%>
            <p><%= cl_image_tag photo.key, height: 300, crop: :fill, class: "w-100", style: "object-fit: cover" %></p>
          <% end %>
        </div>

      </div>
      <div class="d-flex py-3 px-0 justify-content-between">
      <div>
        <p><%= @chair.description %></p>
        <hr>
        <p><strong>This chair is located at:</strong></p>
        <p><%= @chair.address %></p>
        <p><strong>This chair belongs to: </strong></p>
        <p><%= @chair.user.email %></p>
      </div>

      <div class="price-rating-rentbutton-div mx-0 my-0 d-flex align-items-center">
        <div>
          <div class=" d-flex justify-content-between">
            <div class="price-chair-show">
              <%= number_to_currency(@chair.price, unit: "$", separator: ".")  %>
            </div>
            <p><%= image_tag "rating-star.jpg", height: 12, width: 12 %> <%= @chair.rating %></p>
          </div>
          <div class="button-chair-show">
              <% if current_user != @chair.user %>
                <%= link_to "Rent this chair!", new_chair_booking_path(@chair), class:"btn btn-success" %>
              <% end %>
          </div>
        </div>
      </div>


        <% if current_user == @chair.user %>
        <div class="d-flex flex-row p-3">
          <hr>
          <p>Make Changes to your Chair Listing</p>
          <%= link_to "Edit Chair", edit_chair_path(@chair), class:"btn btn-success p-2" %>
          <%= button_to "Delete Chair", @chair, method: :delete, class:"btn btn-danger text-white p-2" %>
        </div>
        <% end %>

      </div>
    </div>
  </div>
</div>
